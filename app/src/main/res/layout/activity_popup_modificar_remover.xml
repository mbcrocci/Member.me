<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isec.gps1718_g15.memberme.PopupModificarRemover"
    android:background="@color/grey"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btnModEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_modificar"
        android:text="Modificar"
        android:layout_gravity="left"
        android:layout_marginRight="10dp"
        android:textSize="10sp"
        android:onClick="modificarEvento"
        />

    <Button
        android:id="@+id/btnRemEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_remover"
        android:text="Remover"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:onClick="removerEvento"
        />
</LinearLayout>